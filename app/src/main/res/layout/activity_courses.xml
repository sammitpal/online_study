<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Courses">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="20dp"
        android:background="#65FAE7">
        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/courses"
            android:textSize="30sp"
            android:textStyle="bold"
            android:fontFamily="@font/ps_r"
            android:textColor="#232322"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardCornerRadius="20dp"
            android:layout_width="match_parent"
            app:cardElevation="0dp">

            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/cpp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/cpp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/chead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="30dp"
                    android:layout_toEndOf="@+id/cpp"
                    android:layout_toRightOf="@+id/cpp"
                    android:fontFamily="@font/ps_r"
                    android:text="C/C++"
                    android:textColor="#232322"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/chead"
                    android:layout_toEndOf="@+id/cpp"
                    android:layout_marginStart="15dp"
                    android:maxLines="4"
                    android:singleLine="false"
                    android:text="C Programming will increase career options. Become a better dev in other languages by learning C. Pointers explained"
                    android:textColor="#232322"
                    android:textSize="13dp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardCornerRadius="20dp"
            android:layout_width="match_parent"
            app:cardElevation="0dp">

            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/java"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/java"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/jhead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="30dp"
                    android:layout_toEndOf="@+id/java"
                    android:layout_toRightOf="@+id/java"
                    android:fontFamily="@font/ps_r"
                    android:text="JAVA"
                    android:textColor="#232322"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/java"
                    android:layout_toEndOf="@+id/java"
                    android:layout_marginStart="15dp"
                    android:maxLines="4"
                    android:singleLine="false"
                    android:text="Learn Java Programming with 200+ examples. For Java Beginners! Learn Java Object Oriented Programming Now!"
                    android:textColor="#232322"
                    android:textSize="13dp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardCornerRadius="20dp"
            android:layout_width="match_parent"
            app:cardElevation="0dp">

            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/python"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/python"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/cpython"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="30dp"
                    android:layout_toEndOf="@+id/python"
                    android:layout_toRightOf="@+id/python"
                    android:fontFamily="@font/ps_r"
                    android:text="Python"
                    android:textColor="#232322"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cpython"
                    android:layout_toEndOf="@+id/python"
                    android:layout_marginStart="15dp"
                    android:maxLines="4"
                    android:singleLine="false"
                    android:text="Welcome! Are you completely new to programming? If not then we
                            presume you will be looking for information about why and how to get started with Python."
                    android:textColor="#232322"
                    android:textSize="13dp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardCornerRadius="20dp"
            android:layout_width="match_parent"
            app:cardElevation="0dp">

            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/js"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/jheader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="30dp"
                    android:layout_toEndOf="@+id/js"
                    android:layout_toRightOf="@+id/js"
                    android:fontFamily="@font/ps_r"
                    android:text="JAVA SCRIPT"
                    android:textColor="#232322"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/jheader"
                    android:layout_toEndOf="@+id/js"
                    android:layout_marginStart="15dp"
                    android:maxLines="4"
                    android:singleLine="false"
                    android:text="Modern JavaScript from the beginning - all the way up to JS expert level! THE must-have JavaScript resource in 2020."
                    android:textColor="#232322"
                    android:textSize="13dp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardCornerRadius="20dp"
            android:layout_width="match_parent"
            app:cardElevation="0dp">

            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/sql"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/sql"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/sqlhead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="30dp"
                    android:layout_toEndOf="@+id/sql"
                    android:layout_toRightOf="@+id/sql"
                    android:fontFamily="@font/ps_r"
                    android:text="SQL"
                    android:textColor="#232322"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sqlhead"
                    android:layout_toEndOf="@+id/sql"
                    android:layout_marginStart="15dp"
                    android:maxLines="4"
                    android:singleLine="false"
                    android:text="Become an In-demand SQL Master by creating complex databases and building reports through real-world projects"
                    android:textColor="#232322"
                    android:textSize="13dp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardCornerRadius="20dp"
            android:layout_width="match_parent"
            app:cardElevation="0dp">

            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/android"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/android"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/ahead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="30dp"
                    android:layout_toEndOf="@+id/android"
                    android:layout_toRightOf="@+id/android"
                    android:fontFamily="@font/ps_r"
                    android:text="Android Development"
                    android:textColor="#232322"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ahead"
                    android:layout_toEndOf="@+id/android"
                    android:layout_marginStart="15dp"
                    android:maxLines="4"
                    android:singleLine="false"
                    android:text="Learn Android App Development with Android 7 Nougat by building real apps including Uber, Whatsapp and Instagram!"
                    android:textColor="#232322"
                    android:textSize="13dp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
    </ScrollView>
</LinearLayout>

